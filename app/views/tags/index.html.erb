<h1>Tags</h1>
<p>
	<%= link_to 'New Tag', new_tag_path, class: 'btn btn-primary' %>
	<%= link_to 'Posts', posts_path, class: 'btn btn-default' %>
</p>
<table class="table table-striped table-bordered">
	<tr>
		<th>Tag Name</th>
		<th></th>
	</tr>
	
	<% @tags.each do |tag| %>
	
	<tr>
		<td><%= tag.name %></td>
		<td><%= link_to 'Delete', tag_path(tag), method: :delete, data: { confirm: 'Are you sure you want to delete tag "' + tag.name + '"?'} %>
	</tr>
	
	<% end %>
</table>
