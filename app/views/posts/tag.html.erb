<div class="row-fluid">
	<div class="col-md-10">
		<h1>Posts tagged with <%= @tag.name %></h1>

		<% @posts.each do |post| %>

		<article>
			<h2><%= post.title %></h2>
			<p><%= post.text %></p>
			<p><%= post.created_at %></p>
			<p>
			<% post.tags.each do |tag| %>
				<span class="label label-success"><%= tag.name %></span>
			<% end %>
			</p>
			<div>
				<p>
					<%= link_to 'Show', post_path(post) %>
					<%= link_to 'Edit', edit_post_path(post) %></td>
					<%= link_to 'Delete', post_path(post), method: :delete, data: { confirm: 'Are you sure you want to delete post "' + post.title + '"?'} %>
				</p>
			</div>
		</article>

		<hr>

		<% end %>
	</div>
</div>