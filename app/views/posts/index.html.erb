<div class="row-fluid">
	<div class="col-md-10">
		<h1>Posts</h1>
		<p>
			<% if user_signed_in? %>
			<%= link_to 'New Post', new_post_path, class: 'btn btn-primary' %>
			<%= link_to 'Tags', tags_path, class: 'btn btn-default' %>
			<% end %>
			<%= link_to 'Archives', archives_posts_path, class: 'btn btn-default' %>
		</p>

		<% @posts.each do |post| %>

		<article>
			<h2><%= link_to post.title, post_path(post) %></h2>
			<p><%= post.text %></p>
			<p><%= post.created_at %></p>
			<p>User: <%= post.user.first_name %></p>

			<p>
			<% post.tags.each do |tag| %>
				<span class="label label-success"><%= tag.name %></span>
			<% end %>
			</p>
			<div>
				<p>
					<%= link_to 'Show', post_path(post), class: 'btn btn-info' %>
					<%= link_to 'Edit', edit_post_path(post), class: 'btn btn-warning' %></td>
					<%= link_to 'Delete', post_path(post), method: :delete, class: 'btn btn-danger', data: { confirm: 'Are you sure you want to delete post "' + post.title + '"?'} %>
				</p>
			</div>
		</article>

		<hr>

		<% end %><br />
		<% if user_signed_in? %>
		<%= link_to 'Sign Out', destroy_user_session_path, method: :delete, class: 'btn btn-default' %>
		<%= link_to 'Users', users_path, class: 'btn btn-default'%>
		<% else %>
		<%= link_to 'Sign In', user_session_path, class: 'btn btn-default'%>
		<% end %>

	</div>
	<div class="col-md-2">
		<h1>Tags</h1>
		<ul style="list-style-type: none; -webkit-padding-start: 0px;">
		<% @tags.each do |tag| %>
			<li><p class="label label-default"><%= link_to( tag.name, { action: 'tag', tag_id: tag.id }, :style => "color: white;" ) %></p></li>
		<% end %>
		</ul>
	</div>
</div>